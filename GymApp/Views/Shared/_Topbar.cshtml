@using GymApp.Website.Helper;
<!--------------------
     START - Top Bar
     -------------------->
<div class="top-bar color-scheme-transparent">
    <!--------------------
    START - Top Menu Controls
    -------------------->
    <div class="top-menu-controls">
        <div class="element-search autosuggest-search-activator">
            <input placeholder="Start typing to search..." type="text">
        </div>
        <div class="logged-user-w">
            <div class="logged-user-i">
                <div class="avatar-w">
                    <img alt="" src="~/Content/themes/img/avatar1.jpg">
                </div>
                <div class="logged-user-menu color-style-bright">
                    <div class="logged-user-avatar-info">
                        <div class="avatar-w">
                            <img alt="" src="~/Content/themes/img/avatar1.jpg">
                        </div>
                        <div class="logged-user-info-w">
                            <div class="logged-user-name">
                                @AuthenticationHelper.GetUserName()
                            </div>
                            <div class="logged-user-role">
                                @AuthenticationHelper.GetUserAddress()
                            </div>
                        </div>
                    </div>
                    <div class="bg-icon">
                        <i class="os-icon os-icon-wallet-loaded"></i>
                    </div>
                    <ul>
                        <li>
                            <a href="apps_email.html"><i class="os-icon os-icon-mail-01"></i><span>Đổi mật khẩu</span></a>
                        </li>
                        <li>
                            <a href="/Home/Login"><i class="os-icon os-icon-signs-11"></i><span>Đăng xuất</span></a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    
        <!--------------------
    END - User avatar and menu in secondary top menu
    -------------------->
    </div>
    <!--------------------
    END - Top Menu Controls
    -------------------->
</div>
<!--------------------
END - Top Bar
-------------------->
<!--------------------
START - Breadcrumbs
-------------------->
<ul class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="index.html">Home</a>
    </li>
    <li class="breadcrumb-item">
        <a href="index.html">@ViewBag.Module</a>
    </li>
    <li class="breadcrumb-item">
        <span>@ViewBag.Action</span>
    </li>
</ul>
<!--------------------
END - Breadcrumbs
-------------------->
